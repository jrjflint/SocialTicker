# Example development environment variables for Social Ticker.
# Copy this file to `.env.development` and replace placeholder values before running docker compose.

# Instagram Graph API (Business Discovery)
IG_BUSINESS_ID=000000000000000
IG_ACCESS_TOKEN=replace-with-token

# Backend cache behaviour
CACHE_TTL_SECONDS=90

# Frontend polling cadence (milliseconds)
FRONTEND_POLL_INTERVAL_MS=5000

# Profile + theming
PROFILE_HANDLE=@yourhandle
PROFILE_URL=https://instagram.com/yourhandle
ACCENT_COLOR=#ff4d4d
THEME=dark

# Local development ports
FRONTEND_PORT=5173
WORKER_DEV_PORT=8787

# Frontend API proxy target (defaults to Worker dev server)
VITE_API_BASE_URL=http://localhost:8787
